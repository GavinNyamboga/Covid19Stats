<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/global_cases_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/orange">

                    <TextView
                        android:id="@+id/cases_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/global_cases"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/cases_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/global_recoveries_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="10dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/global_cases_card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/recoveryColor">

        <TextView
            android:id="@+id/recoveries_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="@string/global_recoveries"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


            </LinearLayout>
                <TextView
                    android:id="@+id/recoveries_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@id/recoveries_txt"
                    android:text="00"
                    android:textStyle="bold"
                    android:textColor="@color/recoveryColor"
                    android:textSize="35sp" />
            </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/global_deaths_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:layout_below="@id/global_recoveries_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/deathsColor">
        <TextView
            android:id="@+id/deaths_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="@string/global_deaths"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


            </LinearLayout>
                <TextView
                    android:id="@+id/deaths_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/deathsColor"
                    android:textSize="35sp" />
            </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/global_active_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="8dp"
       android:layout_below="@id/global_deaths_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/active">
            <TextView
                android:id="@+id/active_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:text="@string/active"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />


            </LinearLayout>
                <TextView
                    android:id="@+id/active_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textColor="@color/active"
                    android:textSize="35sp" />
            </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/global_critical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_below="@id/global_active_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/critical">
            <TextView
                android:id="@+id/critical_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:text="@string/critical"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp" />


            </LinearLayout>
                <TextView
                    android:id="@+id/critical_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/critical"
                    android:textSize="35sp" />
            </LinearLayout>
    </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>