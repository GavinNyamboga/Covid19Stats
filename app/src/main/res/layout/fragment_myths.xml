<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MythsFragment">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:backgroundTint="?attr/colorPrimaryCards"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/md_garlic"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/eng_mythbusting_ncov"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/md_climate"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/mythbusters_33"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:src="@drawable/mb_hot_bath"
                    android:layout_marginBottom="5dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/mb_alcohol"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/mb_recovery"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:src="@drawable/mb_breathing_exercice"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


</ScrollView>